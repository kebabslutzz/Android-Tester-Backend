<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

  <changeSet id="0011-create-defect-type-schema" author="kasparas.putrius">
    <createTable tableName="defect_type">
      <column name="id" type="UUID">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="code" type="VARCHAR(255)"/>
      <column name="description" type="VARCHAR(255)"/>
      <column name="alt_name" type="VARCHAR(255)"/>
      <column name="created" type="TIMESTAMP"/>
      <column name="edited" type="TIMESTAMP"/>
      <column name="edit_count" type="INT"/>
    </createTable>
    <rollback>
      <dropTable tableName="defect_type"/>
    </rollback>
  </changeSet>
</databaseChangeLog>
