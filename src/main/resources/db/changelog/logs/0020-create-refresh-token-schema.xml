<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

  <changeSet id="0019-remove-password-salt-from-user" author="kasparas.putrius">
    <createTable tableName="refresh_token">
      <column name="id" type="UUID">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="token" type="VARCHAR(255)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="expiry_date" type="TIMESTAMP WITH TIME ZONE">
        <constraints nullable="false"/>
      </column>
      <column name="revoked" type="BOOLEAN">
        <constraints nullable="false"/>
      </column>
      <column name="user_id" type="UUID">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <addForeignKeyConstraint baseTableName="refresh_token" baseColumnNames="user_id"
                             constraintName="fk_refresh_token_user"
                             referencedTableName="app_user" referencedColumnNames="id"/>
    <rollback>
      <dropTable tableName="refresh_token"/>
    </rollback>
  </changeSet>
</databaseChangeLog>
